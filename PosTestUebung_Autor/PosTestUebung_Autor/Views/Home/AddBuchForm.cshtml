@{
}

<form asp-controller="Home" asp-action="AddBuch">
    <div class="card">
        <div class="card-header">
            <h1>Add a book for the Author</h1>
        </div>
        <div class="card-body">
            <input hidden asp-for="AutorId" />

            <div class="row mb-3">
                <div class="col">
                    <label>Whats the title of the book?</label>
                    <input class="form-control" asp-for="Title" type="text" placeholder="Title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col">
                    <label>What Genre does the book have?</label>
                    <input class="form-control" asp-for="Genres" type="text" placeholder="Genre" />
                    <span asp-validation-for="Genres" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col">
                    <label>How many pages does the book have?</label>
                    <input class="form-control" asp-for="Pagecount" type="number" step="1" placeholder="Pagecount" />
                    <span asp-validation-for="Pagecount" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col">
                    <label>How many stars does the book have?</label>
                    <input class="form-control" asp-for="Stars" type="number" step="1" placeholder="Stars" />
                    <span asp-validation-for="Stars" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <button class="btn btn-primary" type="submit">Add</button>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}